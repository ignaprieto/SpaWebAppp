@model IEnumerable<SpaWebApp.Models.Turno>

@{
    ViewData["Title"] = "Historial de Turnos";
}

<h2 class="text-center mt-4">Historial de Turnos</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Servicio</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Comentarios</th>
                <th>Cliente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in Model)
            {
                <tr>
                    <td>@turno.Servicio</td>
                    <td>@(turno.FechaTurno?.ToString("dd/MM/yyyy HH:mm") ?? "Fecha no disponible")</td>
                    <td>@turno.Estado</td>
                    <td>@turno.Comentarios</td>
                    <td>@turno.Usuario.Nombre @turno.Usuario.Apellido</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    @@media (max-width: 768px) {
        table {
            font-size: 14px;
        }

        h2 {
            font-size: 18px;
        }
    }

    @@media (max-width: 576px) {
        table {
            font-size: 12px;
        }

        h2 {
            font-size: 16px;
        }
    }
</style>
