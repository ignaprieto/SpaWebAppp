@model IEnumerable<SpaWebApp.Models.PrecioServicio>

@{
    ViewData["Title"] = "Gestión de Precios de Servicios";
}

<div class="container mt-5 p-4 shadow rounded bg-white">
    <h2 class="text-center mb-4">Gestión de Precios de Servicios</h2>

    @if (ViewBag.MensajeExito != null)
    {
        <div class="alert alert-success text-center">
            @ViewBag.MensajeExito
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead class="table">
            <tr>
                <th class="text-center">Servicio</th>
                <th class="text-center">Precio Actual</th>
                <th class="text-center">Actualizar Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servicio in Model)
            {
                <tr>
                    <td class="align-middle text-center">@servicio.Servicio</td>
                    <td class="align-middle text-center font-weight-bold text-primary">
                        $@string.Format("{0:F2}", servicio.Precio)
                    </td>
                    <td class="align-middle text-center">
                        <form asp-action="EditarPrecio" method="post" class="form-inline justify-content-center">
                            <input type="hidden" name="id" value="@servicio.Servicio" />
                            <div class="input-group">
                                <input type="number" step="0.01" name="precio" value="@servicio.Precio" class="form-control" style="max-width: 100px;" />
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f7e9a0 0%, #f4b6c2 50%, #a8d5ba 100%);
    }

    .container {
        background-color: #fefefe;
        border-radius: 8px;
    }

    .table {
        margin-top: 20px;
    }

        .table thead {
            background-color: #6b8f71;
            color: white;
        }

        .table th, .table td {
            vertical-align: middle;
        }

    .input-group-append .btn-primary {
        background-color: #6b8f71;
        border: none;
    }

    .input-group input.form-control {
        border: 1px solid #6b8f71;
    }

    .alert-success {
        font-size: 1rem;
    }
</style>
