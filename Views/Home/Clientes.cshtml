@model IEnumerable<SpaWebApp.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2 class="text-center mt-4">Lista de Clientes</h2>
<h5 class="text-center">Ordenado Alfabéticamente</h5>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Teléfono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefono</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    @@media (max-width: 768px) {
        table {
            font-size: 14px;
        }

        h2, h5 {
            font-size: 18px;
        }
    }

    @@media (max-width: 576px) {
        table {
            font-size: 12px;
        }

        h2, h5 {
            font-size: 16px;
        }
    }
</style>
